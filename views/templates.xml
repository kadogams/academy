<odoo>
    <data>

        <template id="assets_frontend" name="Academy assets" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/css" href="/academy/static/src/css/inscription.css"/>
            </xpath>
        </template>

        <template id="assets_backend" name="Academy assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/academy/static/src/js/fittext.js"/>
            </xpath>
        </template>

        <!-- Update /shop -->
        <template id="custom_products" name="Custom Products" inherit_id="website_sale.products">
            <!-- Update title -->
            <xpath expr="//t[@t-set='additional_title']" position="replace">
                <t t-set="additional_title">Registration</t>
            </xpath>
        </template>

        <!-- Update product tiles on /shop -->
        <template id="custom_products_item" name="Custom Products item" inherit_id="website_sale.products_item">
            <!-- Add description tooltip on products -->
            <xpath expr="//form[hasclass('oe_product_cart')]" position="attributes">
                <t t-if="product.description_tooltip and product.id % 2 == 0">
                    <attribute name="data-toggle">tooltip</attribute>
                    <attribute name="data-html">true</attribute>
                    <attribute name="t-att-title">product.description_tooltip</attribute>
                </t>
            </xpath>
            <!-- Add description tooltip on products -->
            <xpath expr="//div[hasclass('oe_product_image')]/a" position="attributes">
                    <attribute name="class">d-block h-100 position-relative</attribute>
            </xpath>
            <xpath expr="//div[hasclass('oe_product_image')]/a/span" position="before">
                 <t t-if="product.description_tooltip and product.id % 2 != 0">
                    <div class="text-block-test position-absolute h-100 w-100 rounded p-3 text-left" t-field="product.description_tooltip"/>
                 </t>
            </xpath>
        </template>

        <!-- Remove information about delivery on the product page -->
<!--        <template id="custom_product" name="Custom Product" inherit_id="website_sale.product">-->
<!--            <xpath expr="//div[@id='product_details']/hr[last()]" position="replace"/>-->
<!--            <xpath expr="//div[@id='product_details']/p[last()]" position="replace"/>-->
<!--        </template>-->

        <!-- Update Address Management form -->
        <template id="custom_address" name="Custom Address Management" inherit_id="website_sale.address">
            <!-- Add label-optional class -->
            <xpath expr="//label[@for='street']" position="attributes">
                <attribute name="class">col-form-label label-optional</attribute>
            </xpath>
            <!-- Add label-optional class -->
            <xpath expr="//label[@for='city']" position="attributes">
                <attribute name="class">col-form-label label-optional</attribute>
            </xpath>
            <!-- Add label-optional class -->
            <xpath expr="//label[@for='country_id']" position="attributes">
                <attribute name="class">col-form-label label-optional</attribute>
            </xpath>
        </template>

        <!-- Update event cards -->
        <template id="custom_events_list" name="Custom Events List" inherit_id="website_event.events_list">
            <!-- Remove footer -->
            <xpath expr="//article//footer" position="replace"/>
        </template>

        <template id="inscription" name="Inscription">
            <link href="/academy/static/src/css/inscription.css" rel="stylesheet" type="text/css"/>
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">

                    <div class="container">
                        <div class="row">
                            <!--Compréhension-->
                            <div class="col-lg-4 d-flex align-items-stretch s_col_no_bgcolor pt16 pb16">
                                <div class="card bg-white">
                                    <img class="card-img-top" src="/web/image/academy.logo_comprehension" alt="Formule Compréhension"/>
                                    <div class="card-body d-flex flex-column">
                                        <h2 class="card-title text-center text-uppercase">Compréhension</h2>
                                        <h4 class="card-subtitle text-center mb-2">2 modules de 2h</h4>
<!--                                        <div class="flex-fill d-flex flex-column justify-content-around">-->
                                        <div>
                                            <p class="card-text">
                                                1. Psycho-éducation<br/>
                                                <small class="text-muted module_details">
                                                    Bases théoriques sur la regulation veille/sommeil et sur
                                                    l’utilisation de l’agenda de sommeil pour l’identification des
                                                    domaines problématiques.
                                                </small>
                                            </p>
                                            <p class="card-text">
                                                2. Exploration<br/>
                                                <small class="text-muted module_details">
                                                    Principes comportementaux et d’hygiene de sommeil. Apercu des
                                                    différents troubles du sommeil. Sessions de questions/réponses.
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Remédiation-->
                            <div class="col-lg-4 d-flex align-items-stretch s_col_no_bgcolor pt16 pb16">
                                <div class="card bg-white">
                                    <img class="card-img-top" src="/web/image/academy.logo_remediation" alt="Formule Remédiation"/>
                                    <div class="card-body">
                                        <h2 class="card-title text-center text-uppercase">Remédiation</h2>
                                        <h4 class="card-subtitle text-center mb-2">3 modules de 2h</h4>
                                        <ol>
                                            <li>
                                                <p class="card-text">
                                                    Psycho-éducation<br/>
                                                    <small class="text-muted module_details">
                                                        Bases théoriques sur la regulation veille/sommeil et sur
                                                        l’utilisation de l’agenda de sommeil pour l’identification des
                                                        domaines problématiques.
                                                    </small>
                                                </p>
                                            </li>
                                            <br/>
                                            <li>
                                                <p class="card-text">
                                                    Adaptation<br/>
                                                    <small class="text-muted module_details">
                                                        Optimisation du temps au lit, contrôle des stimuli et
                                                        apprentissage d’habitudes productives pour le sommeil.
                                                    </small>
                                                </p>
                                            </li>
                                            <br/>
                                            <li>
                                                <p class="card-text">
                                                    Restructuration<br/>
                                                    <small class="text-muted module_details">
                                                        Révision des attitudes et des croyances sur le sommeil, état
                                                        des lieux post-programme et réorientation.
                                                    </small>
                                                </p>
                                            </li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                            <!--Habituation-->
                            <div class="col-lg-4 d-flex align-items-stretch s_col_no_bgcolor pt16 pb16">
                                <div class="card bg-white">
                                    <img class="card-img-top" src="/web/image/academy.logo_habituation" alt="Formule Habituation"/>
                                    <div class="card-body">
                                        <h2 class="card-title text-center text-uppercase">Habituation</h2>
                                        <h4 class="card-subtitle text-center mb-2">2 modules de 2h</h4>
                                        <ol>
                                            <li>
                                                <p class="card-text">
                                                    Psycho-éducation<br/>
                                                    <small class="text-muted module_details">
                                                        Bases théoriques sur la regulation veille/sommeil et sur
                                                        l’utilisation de l’agenda de sommeil pour l’identification des
                                                        domaines problématiques.
                                                    </small>
                                                </p>
                                            </li>
                                            <br/>
                                            <li>
                                                <p class="card-text">
                                                    Habituation<br/>
                                                    <small class="text-muted module_details">
                                                        Information sur les apnées du sommeil et ses traitements,
                                                        démonstration des systèmes d’aide mécanique ventilatoire,
                                                        conseils d’habituation au traitement. Sessions de
                                                        questions/réponses.
                                                    </small>
                                                </p>
                                            </li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </t>
        </template>

    </data>
</odoo>
